@{
    ViewBag.Title = "Re-Call workitem";
}
<div class="cls_form_recall">
    <h4>Re-Call workitem</h4>
    <div class="cls_form_search">
        <form>
            <div class="row">
                <div class="col-md-2 control-label">
                    Check list no./Request form no./Workflow no. :
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control cls_workflow_number" />
                </div>
                <div class="col-md-2 control-label">
                    Workflow type :
                </div>
                <div class="col-md-4">
                    <select class="cls_workflow_type form-control">
                        <option value="All">All</option>
                        <option value="M">Mockup</option>
                        <option value="A">Artwork</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 control-label">
                    Create date from :
                </div>
                <div class="col-md-4">
                    @{DateTime firstDay = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);}
                    <input value="@firstDay.ToString("dd/MM/yyyy")" type="text" class="form-control cls_create_date_from cls_my_datepicker" />
                </div>
                <div class="col-md-2 control-label">
                    Create date to :
                </div>
                <div class="col-md-4">
                    <input value="@firstDay.AddMonths(1).AddDays(-1).ToString("dd/MM/yyyy")" type="text" class="form-control cls_create_date_to cls_my_datepicker" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 control-label">
                    Current assign :
                </div>
                <div class="col-md-4">
                    @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_current_assign" } })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 control-label">
                    <button type="submit" class="btn btn-success cls_btn_search">Search</button>
                    <button type="button" class="btn btn-danger cls_btn_clear">Clear</button>
                    <button type="button" class="btn btn-primary cls_btn_reassign">Re-Call workitem</button>
                </div>
            </div>
            <hr />
            <table id="table_reassign" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th style="width:10px;" class="cls_nowrap"></th>
                        <th style="width:30px;" class="cls_nowrap">No.</th>
                        <th style="width:70px;" class="cls_nowrap">WF type</th>
                        <th style="width:120px;" class="cls_nowrap">Check list no./<br />Request form no.</th>
                        <th style="width:120px;" class="cls_nowrap">Workflow no.</th>
                        <th class="cls_nowrap">Status</th>
                        <th class="cls_nowrap">Current assign</th>
                    </tr>
                </thead>
            </table>
        </form>
    </div>

    <div class="modal" id="popup_reassign" tabindex="-1" role="dialog" aria-labelledby="popup_reassign_label">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog modal_in_modal vertical-align-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="popup_reassign_label">Re-Call workitem</h4>
                    </div>
                    <form>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-2 control-label">
                                    Remark<span style="color:red;">*</span> :
                                </div>
                                <div class="col-md-7">
                                    <textarea rows="3" required class="cls_input_remark form-control"></textarea>
                                </div>
                                @*<div class="col-md-offset-2 col-md-7">
                                    <label class="error cls_error" for="recall_"></label>
                                </div>*@
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary cls_btn_submit_reassign">Submit</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/artworksettingrecall")
}

