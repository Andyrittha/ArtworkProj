                <th>
                    @Html.DisplayNameFor(model => model.UPDATE_BY)
                </th>*@
            <th style="width:150px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="cls_nowrap"></td>
