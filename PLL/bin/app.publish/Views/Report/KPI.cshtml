@{
    ViewBag.Title = "KPI report";
}
<div class="cls_report_kpi">
    <div class="panel-default">
        <div class="panel-heading cls_div_search_criteria">
            <h3 class="panel-title">@ViewBag.Title</h3>
        </div>
        <div class="panel-body cls_div_body_search_criteria" style="padding:0px;padding-top:10px;">
            <form id="frm_kpi">
                <div class="row">
                    <div class="col-md-2 control-label">
                        Key performance indicator :
                    </div>
                    <div class="col-md-8">
                        <label class="radio-inline">
                            <input type="radio" name="requesttype_kpi" checked value="reject">% Mock Up ที่ลูกค้าปฏิเสธ และ/หรือ แก้ไข Mock Up
                        </label><br>
                        <label class="radio-inline">
                            <input type="radio" name="requesttype_kpi" value="mockstand">% ระยะเวลาในการจัดทำ Mock up ได้ตามเวลามาตรฐาน
                        </label><br>
                        <label class="radio-inline">
                            <input type="radio" name="requesttype_kpi" value="sendquostand">% ของการขอใบเสนอราคาได้ตามเวลามาตรฐาน
                        </label><br>
                        <label class="radio-inline">
                            <input type="radio" name="requesttype_kpi" value="artworkstand">% Artwork ที่สามารถจัดทำได้ตามเวลามาตรฐาน
                        </label><br>
                        <label class="radio-inline">
                            <input type="radio" name="requesttype_kpi" value="postand">% PO ที่สามารถจัดทำได้ตามเวลามาตรฐาน
                        </label><br>
                        <label class="radio-inline">
                            <input type="radio" name="requesttype_kpi" value="saving">ต้นทุนที่สามารถประหยัดได้จากตารางแสดงการเปรียบเทียบราคาของแต่ละ Workflow
                        </label><br>
                    </div>
                    <div class="col-md-2 cls_grading">
                        <div class="col-md-7 cls_header_grade1"> Grade 1 > </div>
                        <div class="col-md-5">
                            <input type="text" class="cls_grade1 form-control" value="9.49" />
                        </div>
                        <br>
                        <div class="col-md-7 cls_header_grade2">Grade 2 <=  </div>
                        <div class="col-md-5">
                            <input type="text" class="cls_grade2 form-control" value="9.49" />
                        </div><br>
                        <div class="col-md-7 cls_header_grade3">Grade 3 <=  </div>
                        <div class="col-md-5">
                            <input type="text" class="cls_grade3 form-control" value="6.49" />
                        </div><br>
                        <div class="col-md-7 cls_header_grade4">Grade 4 <=  </div>
                        <div class="col-md-5">
                            <input type="text" class="cls_grade4 form-control" value="3.50" />
                        </div><br>
                        <div class="col-md-7 cls_header_grade5">Grade 5 <=  </div>
                        <div class="col-md-5">
                            <input type="text" class="cls_grade5 form-control" value="0.5" />
                        </div><br>
                    </div>
                </div>
                <input type="hidden" class="cls_role_code_" value="PG_" />
                <div class="row">
                    <div class="col-md-2 control-label">
                        Date from :
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-5" style="padding-left:0px;">
                            <input type="text" class="cls_kpi_from month-picker-from form-control" placeholder="dd/mm/yyyy" required />
                        </div>
                        <div class="col-md-2 control-label">
                            to :
                        </div>
                        <div class="col-md-5" style="padding-left:0px;padding-right:0px;">
                            <input type="text" class="cls_kpi_to month-picker-to form-control" placeholder="dd/mm/yyyy" required />
                        </div>
                        <style>
                            .ui-datepicker-calendar {
                                display: none;
                            }
                        </style>
                    </div>
                </div>
                <div class="row cls_name_emp">
                    <div class="col-md-2 control-label">
                        Employee name :
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_kpi_employee" } })
                    </div>
                    <div class="col-md-2">
                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_kpi_all_dep">All department</label>
                        <button type="button" class="btn btn-info cls_btn_data_kpi_export_excel cls_hide">Export data</button>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-4">
                        <button type="submit" class="cls_btn_search btn btn-primary">Search</button>
                        <button type="button" class="cls_btn_clr btn btn-danger">Clear</button>
                        <button type="button" class="btn btn-info cls_btn_kpi_export_excel">Export excel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr style="margin-top:10px;margin-bottom:10px;" />
    <div class="row">
        <div class="cls_table_report_kpi cls_hide">
            <table id="table_report_kpi" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th class="cls_nowrap text-center" rowspan="2" colspan="4">Employee</th>

                        <th class="cls_nowrap text-center" colspan="12">Monthly Performance</th>
                        <th class="cls_nowrap text-center" colspan="4">Evaluation results</th>
                    </tr>
                    <tr>
                        <th class="cls_nowrap text-center" rowspan="2">1</th>
                        <th class="cls_nowrap text-center" rowspan="2">2</th>
                        <th class="cls_nowrap text-center" rowspan="2">3</th>
                        <th class="cls_nowrap text-center" rowspan="2">4</th>
                        <th class="cls_nowrap text-center" rowspan="2">5</th>
                        <th class="cls_nowrap text-center" rowspan="2">6</th>
                        <th class="cls_nowrap text-center" rowspan="2">7</th>
                        <th class="cls_nowrap text-center" rowspan="2">8</th>
                        <th class="cls_nowrap text-center" rowspan="2">9</th>
                        <th class="cls_nowrap text-center" rowspan="2">10</th>
                        <th class="cls_nowrap text-center" rowspan="2">11</th>
                        <th class="cls_nowrap text-center" rowspan="2">12</th>
                        <th class="cls_nowrap text-center" colspan="2">(Month 1-6)</th>
                        <th class="cls_nowrap text-center" colspan="2">(Month 7-12)</th>
                    </tr>
                    <tr>
                        <th class="cls_nowrap text-center">No. </th>
                        <th class="cls_nowrap text-center">Employee ID</th>
                        <th class="cls_nowrap text-center">Employee name</th>
                        <th class="cls_nowrap text-center">Position</th>
                        <th class="cls_nowrap text-center">Percentage</th>
                        <th class="cls_nowrap text-center">Grade</th>
                        <th class="cls_nowrap text-center">Percentage</th>
                        <th class="cls_nowrap text-center">Grade</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="row cls_kpi_saving_count cls_hide">
        <div class="col-md-2 control-label cls_label_total_wf"></div>
    </div>

    <div class="row">
        <div class="col-md-12 cls_head_for_kpi">
            <div class="cls_for_kpi_table cls_hide"></div>
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/reportkpi")

}
