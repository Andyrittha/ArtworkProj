@model DAL.Model.ART_M_STEP_ARTWORK_2
@{
    ViewBag.Title = "Edit step (Artwork workflow)";
}

<h4>Edit step (Artwork workflow)</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    <div class="cls_show_error form-group">
        <div class="col-md-offset-2 col-md-6">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.HiddenFor(model => model.STEP_ARTWORK_ID)
    @Html.HiddenFor(model => model.STEP_ARTWORK_CODE)
    @Html.HiddenFor(model => model.ROLE_ID_RESPONSE)

    <div class="form-group">
        <label class="control-label col-md-2">Step name<span style="color:red;">*</span> : </label>
        <div class="col-md-5">
            @Html.EditorFor(model => model.STEP_ARTWORK_NAME, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.STEP_ARTWORK_NAME, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Step description<span style="color:red;">*</span> : </label>
        <div class="col-md-5">
            @Html.EditorFor(model => model.STEP_ARTWORK_DESCRIPTION, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.STEP_ARTWORK_DESCRIPTION, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Duration (Days) : </label>
        <div class="col-md-5">
            @Html.EditorFor(model => model.DURATION, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DURATION, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Duration extend (Days) : </label>
        <div class="col-md-5">
            @Html.EditorFor(model => model.DURATION_EXTEND, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DURATION_EXTEND, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button> |
            @Html.ActionLink("Back to list", "Index")
        </div>
    </div>
</div>
}


