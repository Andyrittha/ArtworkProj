@model IEnumerable<DAL.Model.ART_M_RECEIVE_EMAIL_NEW_CUSTOMER_2>

@{
    ViewBag.Title = "Notification email receiver for new customer";
}

<h4>
    Notification email receiver for new customer
</h4>

<p>
    @Html.ActionLink("Create new", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table display" style="width:100%">
    <thead>
        <tr>
            <th style="width:30px;">No.</th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th style="width:50px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="cls_nowrap"></td>
                <td>
                    @Html.DisplayFor(modelItem => item.USER_DISPLAY_TXT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL_DISPLAY_TXT)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ART_M_RECEIVE_EMAIL_ID })
                </td>
            </tr>
        }
    </tbody>

</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $('.table').DataTable({
                "scrollX": true,
                "columnDefs": [
                    { "searchable": false, "orderable": false, "targets": 0 },
                    { "searchable": false, "orderable": false, "targets": 3 },
                ],
                stateSave: true,
                "order": [[1, 'asc']],
            });

            table.on('order.dt search.dt', function () {
                table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
    </script>
}