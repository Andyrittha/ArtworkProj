<div class="modal cls_pg_submit_modal_to_customer" id="pg_submit_modal_to_customer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Send to customer</h4>
            </div>
            <form>
                <div class="modal-body">

                    <div class="row" style="padding-bottom:10px;">
                        <div class="col-md-11">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_file_template" } })
                        </div>
                        <div class="col-md-1 control-label">
                            <a href="@Url.Action("DownloadFileTemplate","FileUpload")" style="" class="cls_link_load_file_template cls_hand" target="_blank">Download</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label class="radio-inline"><input type="radio" name="send_to_customer_approve" class="cls_chk_send_die_line" value="1">Send soft file mock up for Approve</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="radio-inline"><input type="radio" name="send_to_customer_approve" class="cls_chk_send_physical" value="0">Send physical mock up for Approve</label>
                        </div>
                    </div>

                    <div class="row">
                      
                        <div class="col-md-12">
                            <label class="error cls_error" for="send_to_customer_approve"></label>
                        </div>
                    </div>

                   
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Customer :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_customer" />
                        </div>
                        <div class="col-md-2 control-label">
                            Brand :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_brand" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2 control-label">
                            Country :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_country" />
                        </div>
                        <div class="col-md-2 control-label">
                            Project name :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_project_name" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            MKT name :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_mkt_name" />
                        </div>
                        <div class="col-md-2 control-label">
                            Primary type :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_primary_type" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Primary size :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_primary_size" />
                        </div>
                        <div class="col-md-2 control-label">
                            Net weight :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_net_weight" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Pack size :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_pack_size" />
                        </div>
                        <div class="col-md-2 control-label">
                            Packing style(LxWxH)<span style="color:red;">*</span> :
                        </div>
                        <div class="col-md-4">
                            <input type="text" required class="form-control cls_c_packing_style" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2 control-label">
                            Packaging type :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_packaging_type" />
                        </div>
                        <div class="col-md-2 control-label">
                            Packaging style :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_packaging_style" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Printing system :
                        </div>
                        <div class="col-md-4">
                            <input disabled type="text" class="form-control cls_c_printing_system" />
                        </div>
                        @*<div class="col-md-2 control-label">
                            Purpose of<span style="color:red;">*</span> :
                        </div>
                        <div class="col-md-4">
                            <input type="text" required class="form-control cls_c_purpose_of" />
                        </div>*@
                    </div>

                    <div class="row">
                        <div class="col-md-2 control-label">
                            Send for (Reason) :
                        </div>
                        <div class="col-md-10">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_send_for_reason" }, { "cls_txtarea", "cls_input_remark_other" } })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="cls_txtedt_send_customer" style="height: 80px;"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-7">

                        </div>
                        <div style="text-align: right;" class="col-md-5">
                            <a class="cls_hand" data-go_to_step="SEND_CUS_APP" data-toggle="modal" data-target="#popup_attachment">Upload Attachment</a>&nbsp;&nbsp;&nbsp;
                            <a class="cls_hand" data-toggle="modal" data-target="#pg_master_template">Copy Template</a>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-1 control-label">
                            TO :
                        </div>
                        <div class="col-md-5">
                            <textarea style="" disabled rows="5" class="cls_txt_display_to_customer form-control"></textarea>
                        </div>
                        <div class="col-md-1 control-label">
                            CC :
                        </div>
                        <div class="col-md-5">
                            <textarea style="" disabled rows="5" class="cls_txt_display_cc_customer form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="cls_btn_submit btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

