<div class="cls_div_customer" style="padding-top:10px;">
    <div class="cls_div_only_customer cls_hide">
        <div class="row">
            <div class="col-md-2 control-label">
                Customer :
            </div>
            <div class="col-md-4">
                <input disabled type="text" class="form-control cls_c_customer" />
            </div>
            <div class="col-md-2 control-label">
                Brand :
            </div>
            <div class="col-md-4">
                <input disabled type="text" class="form-control cls_c_brand" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2 control-label">
                Country :
            </div>
            <div class="col-md-4">
                <input disabled type="text" class="form-control cls_c_country" />
            </div>
            <div class="col-md-2 control-label">
                Project name :
            </div>
            <div class="col-md-4">
                <input disabled type="text" class="form-control cls_c_project_name" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 control-label">
                MKT name :
            </div>
            <div class="col-md-4">
                <input disabled type="text" class="form-control cls_c_mkt_name" />
            </div>
            <div class="col-md-2 control-label">
                Primary type :
            </div>
            <div class="col-md-4">
                <input disabled type="text" class="form-control cls_c_primary_type" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 control-label">
                Primary size :
            </div>
            <div class="col-md-4">
                <input disabled type="text" class="form-control cls_c_primary_size" />
            </div>
            <div class="col-md-2  control-label">
                Net weight :
            </div>
            <div class="col-md-4">
                <input disabled type="text" class="form-control cls_c_net_weight" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 control-label">
                Packaging type :
            </div>
            <div class="col-md-4">
                <input disabled type="text" class="form-control cls_c_packaging_type" />
            </div>
            <div class="col-md-2 control-label">
                Pack size :
            </div>
            <div class="col-md-4">
                <input disabled type="text" class="form-control cls_c_pack_size" />
            </div>
            @*<div class="col-md-2 control-label">
                    Packing style(LxWxH) :
                </div>
                <div class="col-md-4">
                    <input disabled type="text" class="form-control cls_c_packing_style" />
                </div>*@
        </div>

        <div class="row">
            @*<div class="col-md-2 control-label">
                    Packaging type :
                </div>
                <div class="col-md-4">
                    <input disabled type="text" class="form-control cls_c_packaging_type" />
                </div>*@
            @*<div class="col-md-2  control-label">
                    Packaging style :
                </div>
                <div class="col-md-4">
                    <input disabled type="text" class="form-control cls_c_packaging_style" />
                </div>*@
        </div>
        <div class="row">
            @*<div class="col-md-2 control-label">
                    Printing system :
                </div>
                <div class="col-md-4">
                    <input disabled type="text" class="form-control cls_c_printing_system" />
                </div>*@
            @*<div class="col-md-2 control-label">
                    Purpose of :
                </div>
                <div class="col-md-4">
                    <input disabled type="text" class="form-control cls_c_purpose_of" />
                </div>*@
        </div>
        <div class="row">
            <div class="col-md-2 control-label">
                Topic :
            </div>
            <div class="col-md-4 control-label">
                <span style="font-weight:bold;" class="cls_lbl_die_line">Review die line</span>
                <span style="font-weight:bold;" class="cls_lbl_physical cls_hide">Review physical/soft file mockup</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 control-label">
                Comment by thaiunion :
            </div>
            <div class="col-md-10 control-label">
                <div style="border:1px solid lightgray;padding:5px;background-color:#f8f8f8;border-color: #fff;min-height:50px;" class="cls_c_commect_by_pg"></div>
            </div>
        </div>
        <form>
            <div class="row">
                <div class="col-md-2 control-label">
                    Comment :
                </div>
                <div class="col-md-10">
                    <textarea style="" rows="3" class="cls_c_commect form-control"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 control-label">
                    Decision :
                </div>
                <div class="col-md-3">
                    <label class="radio-inline"><input required type="radio" name="customer_decision" value="APPROVE" class="cls_chk_decision_approve">Approve</label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 control-label">

                </div>
                <div class="col-md-1">
                    <label class="radio-inline"><input required type="radio" name="customer_decision" value="REVISE" class="cls_chk_decision_revise">Revise</label>
                </div>
                <div class="col-md-3">
                    @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_decision_revise" } })
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 control-label">

                </div>
                <div class="col-md-1">
                    <label class="radio-inline"><input required type="radio" name="customer_decision" value="CANCEL" class="cls_chk_decision_cancel">Cancel</label>
                </div>
                <div class="col-md-3">
                    @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_decision_cancel" } })
                </div>
            </div>


            <div class="row">
                <div class="col-md-2 control-label">

                </div>
                <div class="col-md-4">
                    <label class="error cls_error" for="customer_decision"></label>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="cls_btn_submit btn btn-primary">Submit</button>
                    @*<button type="button" class="cls_send_back btn btn-warning">Send back workflow</button>*@
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="button" data-toggle="modal" data-target="#popup_attachment" data-go_to_step="SEND_CUS_APP" class="btn btn-default">View/upload attachment</button>
        </div>
    </div>
    <div class="cls_div_customer_log cls_hide">
        @Html.Partial("ColorInfo")
        <div class="row">
            <div class="col-md-12">
                <table id="table_customer_log" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th class="cls_nowrap cls_th_log_by_pg">No.</th>
                            <th class="cls_nowrap cls_th_log_by_pg">Customer name</th>
                            <th class="cls_nowrap cls_th_log_by_pg">Topic</th>
                            <th class="cls_nowrap cls_th_log_by_pg">Packing style(LxWxH)</th>
                            @*<th class="cls_nowrap cls_th_log_by_pg">Purpose of</th>*@
                            <th class="cls_nowrap cls_th_log_by_pg">Reason by PG</th>
                            <th class="cls_nowrap cls_th_log_by_pg">Remark reason by PG</th>
                            <th class="cls_nowrap cls_th_log_by_pg">Comment by PG</th>
                            <th class="cls_nowrap cls_th_log_by_pg">Created date-time</th>
                            <th class="cls_nowrap">Action name</th>
                            <th class="cls_nowrap">Comment</th>
                            <th class="cls_nowrap">Decision</th>
                            <th class="cls_nowrap">Created date-time</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
