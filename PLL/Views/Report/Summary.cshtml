@{
    ViewBag.Title = "Summary report";
}
<div class="cls_report_summary">
    <div class="panel-default">
        <div class="panel-heading cls_div_search_criteria">
            <h3 class="panel-title">Summary report</h3>
        </div>
        <div class="panel-body cls_div_body_search_criteria" style="padding:0px;padding-top:10px;">
            <form>
                <div class="row">
                    <div class="col-md-2 control-label">
                        Report period date from :
                    </div>
                    <div class="col-md-2">
                        <input type="text" class="cls_search_so_created_from cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                    </div>
                    <div class="col-md-1 control-label">
                        to :
                    </div>
                    <div class="col-md-2">
                        <input type="text" class="cls_search_so_created_to cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                    </div>
                </div>
                @*<div class="row">
                        <div class="col-md-2 control-label">
                            Workflow status   :
                        </div>
                        <div class="col-md-2">
                            <select class="form-control cls_ddl_workflow_status" style="width:100%;">
                                <option selected value="ALL">All</option>
                                <option value="I">In process</option>
                                <option value="T">Terminated</option>
                                <option value="C">Completed</option>
                            </select>
                        </div>
                    </div>*@
                <div class="row">
                    <div class="col-md-4">
                        <button type="button" class="cls_btn_search btn btn-primary">Search</button>
                        <button type="button" class="cls_btn_clr btn btn-danger">Clear</button>
                        <button type="button" class="btn btn-default cls_show_hide_graph_summary">Show/hide graph</button>
                        <button type="button" class="btn btn-default cls_btn_view_logic_report_summary">View logic program</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr style="margin-top:10px;margin-bottom:10px;" class="cls_row_chart" />
    <div class="row cls_row_chart">
        <div class="col-md-6 cls_chart_report_summary_left">
            <div class="cls_columnchart_left" id="div_columnchart_left"></div>
        </div>
        <div class="col-md-6 cls_chart_report_summary_right">
            <div class="cls_columnchart_right" id="div_columnchart_right"></div>
        </div>
    </div>
    <hr style="margin-top:10px;margin-bottom:10px;" />


    <div class="row">
        <div class="col-md-2 control-label">
            Workflow type :
        </div>
        <div class="col-md-2">
            <select class="form-control cls_ddl_workflow_type" style="width:100%;">
                <option selected value="ALL">All</option>
                <option value="ART">Artwork</option>
                @*<option value="ARTNEW">Artwork new</option>
                    <option value="ARTREPEAT">Artwork repeat</option>
                    <option value="ARTR6">Artwork repeat R6</option>*@
                <option value="MO">Mockup</option>
                @*<option value="MONORMAL">Mockup normal</option>
                    <option value="MODESIGN">Mockup design</option>
                    <option value="MODIELINE">Mockup dieline</option>*@
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 cls_table2_report_summary">
            <div style="background-color: #f9f9f9;margin-bottom: -10px;font-weight: bold;padding-top: 5px;padding-bottom: 5px;border-top: 1px solid lightgray;padding-left: 10px;">
                Summary by workflow
            </div>
            <table id="table2_report_summary" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th rowspan="2" class="cls_nowrap">No.</th>
                        <th rowspan="2" class="cls_nowrap">Workflow type</th>
                        <th rowspan="2" class="cls_nowrap">Total</th>
                        <th colspan="4" style="text-align:center;" class="cls_nowrap cls_td_boder_left">In process</th>
                        <th colspan="4" style="text-align:center;" class="cls_nowrap cls_td_boder_left">Completed</th>
                    </tr>
                    <tr>
                        <th style="text-align:center;" class="cls_nowrap cls_td_boder_left cls_font_green">On time</th>
                        <th style="text-align:center;" class="cls_nowrap cls_font_yellow">Almost due</th>
                        <th style="text-align:center;" class="cls_nowrap cls_font_red">Over due</th>
                        <th style="text-align:center;" class="cls_nowrap cls_font_blue">Total</th>

                        <th style="text-align:center;" class="cls_nowrap cls_td_boder_left cls_font_green">On time</th>
                        <th style="text-align:center;" class="cls_nowrap cls_font_red">Over due</th>
                        <th style="text-align:center;" class="cls_nowrap cls_font_blue">Total</th>
                        <th style="text-align:center;" class="cls_nowrap cls_font_blue">On time(%)</th>
                        <th style="text-align:center;" class="cls_hide"></th>
                        <th style="text-align:center;" class="cls_hide"></th>
                        <th style="text-align:center;" class="cls_hide"></th>


                        <th style="text-align:center;" class="cls_hide"></th>
                        <th style="text-align:center;" class="cls_hide"></th>
                        <th style="text-align:center;" class="cls_hide"></th>
                        <th style="text-align:center;" class="cls_hide"></th>
                        <th style="text-align:center;" class="cls_hide"></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <hr style="margin-top:10px;margin-bottom:10px;" />


    <div class="row">
        <div class="col-md-2 control-label">
            Department :
        </div>
        <div class="col-md-2">
            <select class="form-control cls_ddl_department" style="width:100%;">
                <option selected value="ALL">All</option>
                <option value="PK">Packaging</option>
                <option value="MK">Marketing</option>
                <option value="QC">QC</option>
                <option value="RD">RD</option>
                <option value="WH">Warehouse</option>
                <option value="PN">Planning</option>
                <option value="CUS">Customer</option>
                <option value="VN">Vendor</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 control-label">
            Workflow type :
        </div>
        <div class="col-md-2">
            <select class="form-control cls_ddl_workflow_type2" style="width:100%;">
                <option selected value="ALL">All</option>
                <option value="ART">Artwork</option>
                <option value="MO">Mockup</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 cls_table1_report_summary">
            <div style="background-color: #f9f9f9;margin-bottom: -10px;font-weight: bold;padding-top: 5px;padding-bottom: 5px;border-top: 1px solid lightgray;padding-left: 10px;">
                Summary by department
            </div>
            <table id="table1_report_summary" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th rowspan="2" class="cls_nowrap">No.</th>
                        <th rowspan="2" class="cls_nowrap">Step</th>
                        <th rowspan="2" class="cls_nowrap">Workflow type</th>
                        <th rowspan="2" style="text-align:right;" class="cls_nowrap">Total</th>
                        <th colspan="4" style="text-align:center;" class="cls_nowrap cls_td_boder_left">In process</th>
                        <th colspan="3" style="text-align:center;" class="cls_nowrap cls_td_boder_left">Completed</th>
                    </tr>
                    <tr>
                        <th style="text-align:center;" class="cls_nowrap cls_td_boder_left cls_font_green">On time</th>
                        <th style="text-align:center;" class="cls_nowrap cls_font_yellow">Almost due</th>
                        <th style="text-align:center;" class="cls_nowrap cls_font_red">Over due</th>
                        <th style="text-align:center;" class="cls_nowrap cls_font_blue">Total</th>

                        <th style="text-align:center;" class="cls_nowrap cls_font_green">On time</th>
                        <th style="text-align:center;" class="cls_nowrap cls_font_red">Over due</th>
                        <th style="text-align:center;" class="cls_nowrap cls_font_blue">Total</th>
                        <th style="text-align:center;" class="cls_hide"></th>
                        <th style="text-align:center;" class="cls_hide"></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>


    <div class="modal" id="popup_data_dedtail" tabindex="-1" role="dialog" aria-labelledby="popup_data_dedtail">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="popup_data_dedtail">Workflow information</h4>
                </div>
                <div class="modal-body">
                    <div class="row cls_hide">
                        <div class="col-md-2 control-label">
                            Report period date from :
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="cls_search_so_created_from_data_detail cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                        <div class="col-md-1 control-label">
                            to :
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="cls_search_so_created_to_data_detail cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                    </div>

                    <div class="row cls_hide">
                        <div class="col-md-2 control-label">
                            Workflow type :
                        </div>
                        <div class="col-md-2">
                            <select class="form-control cls_ddl_workflow_type_data_detail" style="width:100%;">
                                <option selected value="ALL">All</option>
                                <option value="ARTNEW">Artwork new</option>
                                <option value="ARTREPEAT">Artwork repeat</option>
                                <option value="ARTR6">Artwork repeat R6</option>
                                <option value="MONORMAL">Mockup normal</option>
                                <option value="MODESIGN">Mockup design</option>
                                <option value="MODIELINE">Mockup dieline</option>
                                <option value="NO">No</option>
                            </select>
                        </div>
                    </div>
                    <div class="row cls_hide">
                        <div class="col-md-2 control-label">
                            Workflow status :
                        </div>
                        <div class="col-md-2">
                            <select class="form-control cls_ddl_workflow_status_data_detail" style="width:100%;">
                                <option selected value="ALL">All</option>
                                <option value="I">In process</option>
                                <option value="T">Terminated</option>
                                <option value="C">Completed</option>
                            </select>
                        </div>
                    </div>

                    <div class="row cls_hide">
                        <div class="col-md-2 control-label">
                            Current step (status) :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_current_step" } })
                        </div>

                    </div>

                    <div class="row cls_hide">
                        <div class="col-md-2 control-label">

                        </div>
                        <div class="col-md-8">
                            <label class="radio-inline">
                                <input type="radio" name="requesttype" value="ALL"> All
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="requesttype" value="ONTIME"> On time
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="requesttype" value="ALMOSTDUE"> Almost due
                            </label>

                            <label class="radio-inline">
                                <input type="radio" name="requesttype" value="OVERDUE"> Over due
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label cls_hide">

                        </div>
                        <div class="col-md-4">
                            <button type="button" class="cls_hide cls_btn_search_data_detail btn btn-primary">Search</button>
                            <button type="button" class="cls_hide cls_btn_clr_data_detail btn btn-danger">Clear</button>
                            <button type="button" class="btn btn-info cls_btn_export_excel">Export excel</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 cls_table_report_summary_data_detail">
                            <table id="table_report_summary_data_detail" class="display" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="cls_nowrap">No</th>
                                        <th class="cls_nowrap">Workflow no.</th>
                                        <th class="cls_nowrap">Current step</th>
                                        <th class="cls_nowrap">Workflow status</th>
                                        <th class="cls_nowrap">Current assign</th>
                                        <th class="cls_nowrap">Customer / Vendor</th>
                                        <th class="cls_nowrap">Assign date</th>
                                        <th class="cls_nowrap">Duration</th>
                                        <th class="cls_nowrap">Extend duration</th>
                                        <th class="cls_nowrap">Due date</th>
                                        <th class="cls_nowrap">End date</th>
                                        <th class="cls_nowrap">Total days</th>
                                        <th class="cls_nowrap">Sales order no</th>
                                        <th class="cls_nowrap">Brand</th>
                                        <th class="cls_nowrap">Sold to</th>
                                        <th class="cls_nowrap">Ship to</th>
                                        <th class="cls_nowrap">Packaging type</th>
                                        <th class="cls_nowrap">Primary type</th>
                                        <th class="cls_nowrap">Product code</th>
                                        <th class="cls_nowrap">RDD</th>
                                        <th class="cls_nowrap">PA name</th>
                                        <th class="cls_nowrap">PG name</th>
                                        <th class="cls_nowrap">Marketing name</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal cls_view_logic_program_summary_report" id="view_logic_program_summary_report" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" style="width:900px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Logic program</h4>
                </div>
                <div class="modal-body">
                    <div><img style="width:870px;" src="/Content/img/logic_summary_report.jpg"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/reportsummary")

}
@section Styles {
    <style>
        .cls_report_summary .cls_font_green {
            color: #109618;
        }

        .cls_report_summary .cls_font_yellow {
            color: #ff9900;
        }

        .cls_report_summary .cls_font_red {
            color: #dc3912;
        }

        .cls_report_summary .cls_font_blue {
            color: blue;
        }

        .cls_report_summary .cls_td_boder_left {
            border-left: 2px solid lightgray;
        }

        .cls_report_summary td.cls_show_data_detail {
            text-decoration: underline;
            cursor: pointer;
        }

        .cls_report_summary td.cls_show_data_detail_by_step {
            text-decoration: underline;
            cursor: pointer;
        }
    </style>
    <style>
        .cls_report_summary div.google-visualization-tooltip {
            width: 150px;
        }
    </style>
}
