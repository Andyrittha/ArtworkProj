@model DAL.ART_WF_DELEGATE

@{
    ViewBag.Title = "Delete delegate setting";
}

<h4>Delete delegate setting</h4>

<h5>Are you sure you want to delete this?</h5>
<div>
    <hr />
    @{
        using (var context = new DAL.ARTWORKEntities())
        {
            <dl class="dl-horizontal">
                <dt>
                    Delegate from :
                </dt>

                <dd>
                    @BLL.Services.CNService.GetUserName(Convert.ToInt32(Model.CURRENT_USER_ID), context)
                </dd>

                <dt>
                    Delegate to :
                </dt>

                <dd>
                    @BLL.Services.CNService.GetUserName(Convert.ToInt32(Model.TO_USER_ID), context)
                </dd>

                <dt>
                    Delegate date from :
                </dt>

                <dd>
                    @Model.FROM_DATE.Date.ToString("dd/MM/yyyy")
                </dd>

                <dt>
                    Delegate date to :
                </dt>

                <dd>
                    @Model.TO_DATE.Date.ToString("dd/MM/yyyy")
                </dd>

                <dt>
                    Reason for delegate :
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.REASON)
                </dd>
            </dl>
        }
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-primary">Delete</button> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
