<div class="modal" id="modal_igrid_pa_primary" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <form>
        <div>
            @*<div class="vertical-alignment-helperxx">*@
            <div class="modal-dialog modal-lg">
                @*<div class="modal-dialog modal_in_modal vertical-align-center">*@
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="popup_attachment_label">Primary Size</h4>
                    </div>

                    <div class="modal-body cls_div_igrid_parimary_size_search">

                        <div class="row">
                            <div class="col-md-2 control-label">
                                Running :
                            </div>
                            <div class="col-md-2">
                                <input type="text" class="form-control cls_txt_primary_size_code" />
                            </div>


                        </div>

                        <div class="row">
                            <div class="col-md-2 control-label">
                                Code Primary (Digit 9-11):
                            </div>
                            <div class="col-md-2">
                                <input type="text" class="form-control cls_txt_primary_size_can" />

                            </div>

                            <div class="col-md-2 control-label">
                                Code Container&Lid (Digit 12-13):
                            </div>
                            <div class="col-md-2">
                                <input type="text" class="form-control cls_txt_primary_size_lid_type" />

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2 control-label">
                                Primary size :
                            </div>
                            <div class="col-md-2">
                                <input type="text" class="form-control cls_txt_primary_size_can_desciption" />
                            </div>
                            <div class="col-md-2 control-label">
                                Container Type :
                            </div>
                            <div class="col-md-2">
                                <input type="text" class="form-control cls_txt_primary_size_container_type" />
                            </div>
                            <div class="col-md-2 control-label">
                                Lid Type :
                            </div>
                            <div class="col-md-2">
                                <input type="text" class="form-control cls_txt_primary_size_description_type" />
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-4">
                                <button type="button" class="btn btn-primary cls_btn_search">Search</button>
                                <button type="button" class="cls_btn_clear btn btn-danger">Clear</button>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-12">
                                <table class="display" style="width:100%" id="TableId_igrid_pa_primary">
                                    <thead>
                                        <tr>
                                            <th class="cls_nowrap"></th>
                                            <th class="cls_nowrap">Id</th>
                                            <th class="cls_nowrap">Running</th>
                                            <th class="cls_nowrap">Code Primary (Digit 9-11)</th>
                                            <th class="cls_nowrap">Primary size</th>

                                            <th class="cls_nowrap">Code Container&Lid (Digit 12-13)</th>
                                            <th class="cls_nowrap">Container Type</th>

                                            <th class="cls_nowrap">Lid Type</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary cls_btn_igrid_pa_terminate_submit">Submit</button>
                        <button type="button" class="btn btn-default cls_btn_igrid_pa_terminate_close" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>