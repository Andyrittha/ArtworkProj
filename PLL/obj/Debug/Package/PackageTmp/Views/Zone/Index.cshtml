@model IEnumerable<DAL.SAP_M_COUNTRY>

@{
    ViewBag.Title = "Country and Zone";
}

<h4>
    Country and Zone
</h4>

<p>
    @Html.ActionLink("Create new", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table display" style="width:100%">
    <thead>
        <tr>
            <th style="width:30px;">No.</th>
            <th>
                Country code
            </th>
            <th>
                Country name
            </th>
            <th>
                Zone
            </th>
            <th style="width:70px;" class="cls_nowrap">
                Is active
            </th>
            <th style="width:50px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.COUNTRY_CODE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZONE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IS_ACTIVE)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.COUNTRY_ID }) 
            </td>
        </tr>
        }
    </tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $('.table').DataTable({
                stateSave: true,
                "scrollX": true,
                "columnDefs": [
                    { "searchable": false, "orderable": false, "targets": 0 },
                    { "searchable": false, "orderable": false, "targets": 5 },
                ],
                "order": [[1, 'asc']],
            });

            table.on('order.dt search.dt', function () {
                table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
    </script>
}