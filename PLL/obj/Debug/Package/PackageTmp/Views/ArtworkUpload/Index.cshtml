@{
    ViewBag.Title = "Upload artwork files";
}

<div>
    <div class="cls_form_artwork_upload_file">
        <div class="row">
            <div class="col-md-12">
                <h4>Upload artwork files</h4><span style="font-style:oblique;">(by customer or marketing)</span>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12 cls_div_uploadartwork">
                @Html.Partial("Upload")
            </div>
        </div>
        <hr />
        <form>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn cls_btn_add_recipient btn-success">Add new recipient</button>&nbsp;
                    <label class="checkbox-inline"><input type="checkbox" class="cls_header_chk cls_chk_type_of_product_hf">Human Food</label>
                    <label class="checkbox-inline"><input type="checkbox" class="cls_header_chk cls_chk_type_of_product_pf">Pet Food</label>
                    <table class="dataTable hover table_recipient">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Recipient <span style="color:red;">*</span></th>
                                @*<th>Email</th>*@
                                <th>Position</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="vertical-align:top;" class="tr_recipient cls_cn_hide">
                                <td style="width:10px;">
                                    <img class="cls_img_delete_recipient" style="cursor:pointer;" src="~/Content/img/ico_delete.png" />
                                </td>
                                <td style="width:600px;">
                                    @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_recipient cls_lov_recipient_static" } })
                                </td>
                                @*<td>
                        <input type="text" class="form-control cls_txt_email" value="" disabled />
                    </td>*@
                                <td>
                                    <input type="text" class="form-control cls_txt_position" value="" disabled />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn cls_btn_save btn-success">Save and upload</button>
                    <button type="submit" class="btn cls_btn_submit btn-primary">Send</button>
                    <button type="button" class="btn cls_btn_cancel btn-danger" style="display:none;">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/artworkupload")
    <script type="text/javascript">
        var ARTWORK_REQUEST_ID = @ViewBag.ArtworkRequestId;
    </script>
}




