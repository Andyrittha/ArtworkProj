        <div class="form-group">
            <label class="control-label col-md-2">Delegate from :</label>
            <div class="col-md-10">
                @{
                    using (var context = new DAL.ARTWORKEntities())
                    {
                        @Html.TextBoxFor(model => model.CURRENT_USER_ID, new { @Value = BLL.Services.CNService.GetUserName(Model.CURRENT_USER_ID, context), @class = "form-control", disabled = "disabled" })
