<div class="cls_task_form_pg" style="padding-top:10px;">
    <form>
        <div class="row">
            <div class="col-md-2 control-label">
                Style of printing :
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control cls_txt_pg_style_of_printing" value="" disabled />
            </div>
        </div>
        <div class="cls_div_for_mockup_normal_and_project">
            <div class="row">
                <div class="col-md-2 control-label">
                    Grade of<span style="color:red;">*</span> :
                </div>
                <div class="col-md-4">
                    @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_grade_of" }, { "cls_txtarea", "cls_input_grade_of" } })
                </div>
                <div class="col-md-2 control-label">
                    RSC/DI-CUT :
                </div>
                <div class="col-md-4">
                    @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_rsc_di_cut" }, { "cls_txtarea", "cls_input_rsc_di_cut" } })
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 control-label">
                    Sheet size :
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control cls_txt_sheet_size" value="" />
                </div>
                <div class="col-md-2 control-label lbl_pg_accessories">
                    Accessories (Grad,Qty) :
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control cls_txt_acessories" value="" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 control-label">
                    Vendor :
                </div>
                <div class="col-md-4">
                    @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_vendor" }, { "cls_txtarea", "cls_input_vendor" } })
                </div>
                <div class="col-md-2 control-label">
                    Printing system of sticker :
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control cls_txt_printing_system" value="" />
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-2 control-label lbl_pg_flute">
                    Flute :
                </div>
                <div class="col-md-4">
                    @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_flute" }, { "cls_txtarea", "cls_input_flute" } })
                </div>
                <div class="col-md-2 control-label lbl_pg_roll_sheet">
                    Roll/sheet :
                </div>
                <div class="col-md-4">
                    <select class="cls_lov_roll_sheet" style="width:100%;">
                        <option value="ROLL">Roll</option>
                        <option value="SHEET">Sheet</option>
                    </select>
                    <textarea style="font-style:oblique;display:none;width:100%;margin-top:2px;" rows="1" placeholder="If Other, please specify." class="form-control cls_input_roll_sheet"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 control-label lbl_pg_dimension_of cls_nowrap">
                    Dimension of (LXWXH)(mm.) :
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control cls_txt_dimension_of" value="" />
                </div>
            </div>
        </div>
    </form>
</div>
