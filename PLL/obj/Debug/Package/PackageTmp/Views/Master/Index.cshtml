
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    <div style="width: 150px;" class="col-md-2">
        By :
        <div class="col-md-4">
            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_master" }, { "cls_txtarea", "cls_input_master" }, { "is_required", "required" } })
        </div>
    </div>
    <div style="width: 150px;" class="col-md-4">
        Keyword :
        <input type="text" class="cls_txt_search_keyword form-control" />
    </div>
</div>
<table>
    <tr>
        <% foreach (DataColumn column in Model.Tables[0].Columns) {%>
        <th><%=column.ColumnName%></th>
        <% }%>
    </tr>
    <% foreach (DataRow row in Model.Tables[0].Rows) {%>
    <tr>
        <%foreach (DataColumn column in Model.Tables[0].Columns) {%>
        <td><%=row[column.ColumnName]%></td>
        <%} %>
    </tr>
    <% }%>
</table>

