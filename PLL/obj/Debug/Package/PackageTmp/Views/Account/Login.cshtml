@using PLL.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Artwork management system</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/DataTables/media/css/css")
    @Styles.Render("~/Content/jQuery.FileUpload/css/css")
    @Styles.Render("~/Content/jquery-confirm/css")
    @Styles.Render("~/Content/quill/css")
    @Styles.Render("~/Content/select2/css")
    @Styles.Render("~/Content/site")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#UserName").focus();
        });
    </script>
</head>
<body>
    <div style="min-height:400px;" class="container body-content">
        <div style="min-height:500px;">
            <div class="row" style="height:150px;">
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div style="text-align:right;margin-top:-20px;margin-right:40px;" class="col-md-3"><img style="width:150px;" src="@Url.Content("~/Content/img/Thai-union-logo.png")" /></div>
                <div class="col-md-6">
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @*@Html.AntiForgeryToken()*@
                            <div class="cls_show_error form-group">
                                <div class="col-md-offset-2 col-md-6">
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label cls_nowrap", @style = "text-align:left" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                    @*@Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })*@
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", @style = "text-align:left" })
                                <div class="col-md-6">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-6">
                                    <div class="checkbox-inline">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-2">
                                    <button type="submit" class="btn btn-primary">Log in</button>
                                </div>
                                <div style="text-align:right;line-height:30px;font-size: 11px;" class="col-md-4">
                                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                </div>
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Thai Union Group PCL. All Rights Reserved.</p>
        </footer>
    </div>
</body>
</html>





