@model PLL.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change your password";
}

@*<h2>@ViewBag.Title.</h2>*@

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @*@Html.AntiForgeryToken()*@
    <h4>Change your password.</h4>
    <hr />
    <div class="cls_show_error form-group">
        <div class="col-md-offset-2 col-md-6">
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    </div>
    @*@Html.HiddenFor(model => model.Code)*@
    <div class="form-group">
        <label class="col-md-2 control-label" for="OldPassword">Current password <span style="color:red;">*</span></label>
        <div class="col-md-6">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="Password">Password <span style="color:red;">*</span></label>
        <div class="col-md-6">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="ConfirmPassword">Confirm password <span style="color:red;">*</span></label>
        <div class="col-md-6">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="button" onclick="location.href='@Url.Action("Index", "Home")'" class="btn btn-danger">Back</button>
        </div>
    </div>
}

