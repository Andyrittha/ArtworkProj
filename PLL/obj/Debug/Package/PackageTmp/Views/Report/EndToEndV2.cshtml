@{
    ViewBag.Title = "End to end report";
}
<div class="cls_report_endtoend">
    <div class="panel-default">
        <div class="panel-heading cls_div_search_criteria">
            <h3 class="panel-title">End to end report</h3>
        </div>
        <div class="panel-body cls_div_body_search_criteria" style="padding:0px;padding-top:10px;">
            <form>
                <div class="row">
                    <div class="col-md-2 control-label">
                        Workflow no. :
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="cls_txt_search_workflow_no form-control" placeholder="Ex. AW-N-2018-00000001" />
                    </div>
                    <div class="col-md-2 control-label">
                        Workflow type :<font color="red">*</font>
                    </div>
                    <div class="col-md-4">
                        <select class="form-control cls_lov_search_workflow_type" style="width:100%;">
                            <option value="AW-" selected>Artwork (All)</option>
                            <option value="AW-N-">Artwork (New)</option>
                            <option value="AW-R-">Artwork (Repeat)</option>
                            <option value="AW-R6-">Artwork (Repeat) (over 6 months)</option>
                            <option value="MO-">Mockup (All)</option>
                            <option value="MO-N-">Mockup for normal</option>
                            <option value="MO-P-">Mockup for project</option>
                            <option value="MO-D-">Mockup for dieline</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 control-label">
                        Request form/Checklist form no. :
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="cls_txt_search_request_form_no form-control" placeholder="Ex. RF-2018-00000001" />
                    </div>
                    <div class="col-md-2 control-label">
                        Request date from <font color="red">*</font>:
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-5" style="padding-left:0px;">
                            @{DateTime firstDay = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);}
                            <input value="@firstDay.ToString("dd/MM/yyyy")" type="text" class="cls_dt_search_request_date_from cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                        <div class="col-md-2 control-label">
                            to :
                        </div>
                        <div class="col-md-5" style="padding-left:0px;padding-right:0px;">
                            <input value="@firstDay.AddMonths(1).AddDays(-1).ToString("dd/MM/yyyy")" type="text" class="cls_dt_search_request_date_to cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 control-label">
                        Reference form no. :
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control cls_txt_search_ref_form_no" />
                    </div>
                    <div class="col-md-2 control-label">
                        Step date from  :
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-5" style="padding-left:0px;">

                            <input type="text" class="cls_dt_search_step_date_from cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                        <div class="col-md-2 control-label">
                            to :
                        </div>
                        <div class="col-md-5" style="padding-left:0px;padding-right:0px;">
                            <input type="text" class="cls_dt_search_step_date_to cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 control-label">
                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_is_completed">Workflow is completed</label>
                    </div>
                    @*<div class="col-md-4">
                <label class="radio-inline"><input type="radio" name="rdo_view_Workflow" value="artwork" checked>Artwork</label>
                <label class="radio-inline"><input type="radio" name="rdo_view_Workflow" value="mockup">Mockup</label>
                </div>*@
                    <div class="col-md-2 control-label">
                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_wf_process">Workflow in process</label>
                    </div>
                    <div class="col-md-2 control-label">
                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_wf_terminated">Workflow is terminated</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 control-label">
                        <hr style="margin-top:0px;margin-bottom:0px;" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @*<fieldset class="scheduler-border">*@
                        @*<legend class="scheduler-border2">*@
                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_advance_search">Advance search</label>
                        @*</legend>*@
                        <div class="row cls_row_advance_search">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-2">Sales order :  </div>
                                    <div class="col-md-4">
                                        <textarea style="" rows="2" class="form-control cls_txtarea_sales_order" placeholder="Ex. 500002212&#10;     500002213"></textarea>
                                    </div>
                                    <div class="col-md-2">Order BOM component :  </div>
                                    <div class="col-md-4">
                                        <textarea rows="2" class="cls_txtarea_order_bom_component form-control" placeholder="Ex. 5K10U303N000000102&#10;     5K10U303N000000101"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 control-label">
                                        SO Create date from :
                                    </div>
                                    <div class="col-md-4">
                                        <div class="col-md-5" style="padding-left:0px;">
                                            <input type="text" class="cls_dt_search_so_create_date_from cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                                        </div>
                                        <div class="col-md-2 control-label">
                                            to :
                                        </div>
                                        <div class="col-md-5" style="padding-left:0px;padding-right:0px;">
                                            <input type="text" class="cls_dt_search_so_create_date_to cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                                        </div>
                                    </div>
                                    <div class="col-md-2 control-label">
                                        Sold to :
                                    </div>
                                    <div class="col-md-4">
                                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_sold_to" } })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 control-label">
                                        Company :
                                    </div>
                                    <div class="col-md-4">
                                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_company" } })
                                    </div>
                                    <div class="col-md-2 control-label">
                                        Ship to :
                                    </div>
                                    <div class="col-md-4">
                                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_ship_to" } })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 control-label">
                                        Brand :
                                    </div>
                                    <div class="col-md-4">
                                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_brand" } })
                                    </div>
                                    <div class="col-md-2 control-label">
                                        Zone :
                                    </div>
                                    <div class="col-md-4">
                                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_zone" } })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 control-label">
                                        Country :
                                    </div>
                                    <div class="col-md-4">
                                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_country" } })
                                    </div>
                                    <div class="col-md-2 control-label">
                                        Packaging type :
                                    </div>
                                    <div class="col-md-4">
                                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_packaging_type" } })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 control-label">
                                        Primary size :
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="cls_txt_search_primary_size form-control" placeholder="Ex. 401x203(2P)" />
                                    </div>
                                    <div class="col-md-2 control-label">
                                        Project name :
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="cls_txt_search_project_name form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2">Product code :  </div>
                                    <div class="col-md-4">
                                        <textarea rows="2" class="cls_txtarea_search_product_code form-control" placeholder="Ex. 3AA7LN2NYAENTMUURU"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 control-label">
                                        RD Reference no. :
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="cls_txt_search_rd_ref_no form-control" />
                                    </div>
                                    <div class="col-md-2 control-label">
                                        Net weight :
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="cls_txt_search_net_weight form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 control-label">
                                        Current step (status) :
                                    </div>
                                    <div class="col-md-4">
                                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_current_step" } })
                                    </div>
                                    <div class="col-md-2 control-label">
                                        Creator :
                                    </div>
                                    <div class="col-md-4">
                                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_creator" } })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 control-label">
                                        Customer approve process (Days) from :
                                    </div>
                                    <div class="col-md-4">
                                        <div class="col-md-5" style="padding-left:0px;">
                                            <input type="text" class="cls_txt_search_customer_approve_from form-control" placeholder="Ex. 1" onkeypress="return onlyNumberKey(event)" />
                                        </div>
                                        <div class="col-md-2 control-label">
                                            to :
                                        </div>
                                        <div class="col-md-5" style="padding-left:0px;padding-right:0px;">
                                            <input type="text" class="cls_txt_search_customer_approve_to form-control" placeholder="Ex. 3" onkeypress="return onlyNumberKey(event)" />
                                        </div>
                                    </div>
                                    <div class="col-md-2 control-label">
                                        Supervised by :
                                    </div>
                                    <div class="col-md-4">
                                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_supervised_by" } })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 control-label">
                                        End to end process (Days) from :
                                    </div>
                                    <div class="col-md-4">
                                        <div class="col-md-5" style="padding-left:0px;">
                                            <input type="text" class="cls_txt_search_end_to_end_from form-control" placeholder="Ex. 1" onkeypress="return onlyNumberKey(event)" />
                                        </div>
                                        <div class="col-md-2 control-label">
                                            to :
                                        </div>
                                        <div class="col-md-5" style="padding-left:0px;padding-right:0px;">
                                            <input type="text" class="cls_txt_search_end_to_end_to form-control" placeholder="Ex. 25" onkeypress="return onlyNumberKey(event)" />
                                        </div>
                                    </div>
                                    <div class="col-md-2 control-label">
                                        Current assign :
                                    </div>
                                    <div class="col-md-4">
                                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_current_assign" } })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 control-label"></div>
                                    <div class="col-md-4">
                                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_is_overdue">Is Overdue</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*</fieldset>*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <button type="submit" class="cls_btn_search btn btn-primary">Search</button>
                        <button type="button" class="cls_btn_clear btn btn-danger">Clear</button>
                        <button type="button" class="btn btn-info cls_btn_export_excel">Export excel</button>
                        <button type="button" class="btn btn-success cls_btn_download_file">Download file</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr style="margin-top:10px;margin-bottom:10px;" />
    <div class="row">
        <div class="col-md-12 cls_table_report_endtoend">
            <table id="table_report_endtoend" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th class="cls_nowrap"></th>
                        <th class="cls_nowrap cls_hide">No. </th>
                        <th class="cls_nowrap">File</th>
                        <th class="cls_nowrap">WF no.</th>
                        <th class="cls_nowrap">Packaging type</th>
                        <th class="cls_nowrap">WF Status</th>
