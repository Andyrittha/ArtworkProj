                        <th class="cls_nowrap">Current assign</th>
                        <th class="cls_nowrap">Due date</th>
                        <th class="cls_nowrap">SO No.</th>
                        <th class="cls_nowrap">Brand</th>
                        <th class="cls_nowrap">Additional brand</th>
                        <th class="cls_nowrap">Product code</th>
                        <th class="cls_nowrap">Prod./insp. memo</th>
                        <th class="cls_nowrap">RD Reference no.</th>
                        <th class="cls_nowrap">Production plant</th>
                        <th class="cls_nowrap">Sold to</th>
                        <th class="cls_nowrap">Ship to</th>
                        <th class="cls_nowrap">Country</th>
                        <th class="cls_nowrap">Port</th>
                        <th class="cls_nowrap">In transit to</th>
                        <th class="cls_nowrap">SO create date</th>
                        <th class="cls_nowrap">RDD</th>
                        <th class="cls_nowrap">Request form/checklist form no.</th>
                        <th class="cls_nowrap">PA Owner</th>
                        <th class="cls_nowrap">PG Owner</th>
                        <th class="cls_nowrap">Step</th>
                        <th class="cls_nowrap">Current assign</th>
                        <th class="cls_nowrap">Start date</th>
                        <th class="cls_nowrap">End date</th>
                        <th class="cls_nowrap">Step duration (Days)</th>
