@{
    ViewBag.Title = "Tracking report";
}
<div class="cls_report_tracking">
    <div class="panel-default">
        <div class="panel-heading cls_div_search_criteria">
            <h3 class="panel-title">Tracking report</h3>
        </div>
        <div class="panel-body cls_div_body_search_criteria" style="padding:0px;padding-top:10px;">
            <form>
                <div class="row">
                    <div class="col-md-2 control-label">
                        Workflow no. :
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control cls_trk_wf_no" placeholder="Ex. AW-N-2018-00000001" />
                    </div>
                    <div class="col-md-2 control-label">
                        Workflow type   :
                    </div>
                    <div class="col-md-4">
                        <select class="form-control cls_trk_req_type" style="width:100%;">
                            <option value="" selected></option>
                            <option value="AW-N">Artwork (New)</option>
                            <option value="AW-R">Artwork (Repeat)</option>
                            <option value="AW-R6">Artwork (Repeat) (over 6 months)</option>
                            <option value="MO-N">Mockup for normal</option>
                            <option value="MO-P">Mockup for project</option>
                            <option value="MO-D">Mockup for dieline</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 control-label">
                        Request form/Checklist form no. :
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control cls_trk_wf_no_2" placeholder="Ex. RF-2018-00000001" />
                    </div>
                    <div class="col-md-2 control-label">
                        Request date from :
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-5" style="padding-left:0px;">
                            @{DateTime firstDay = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);}
                            <input value="@firstDay.ToString("dd/MM/yyyy")" type="text" class="cls_trk_req_from cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                        <div class="col-md-2 control-label">
                            to :
                        </div>
                        <div class="col-md-5" style="padding-left:0px;padding-right:0px;">
                            <input value="@firstDay.AddMonths(1).AddDays(-1).ToString("dd/MM/yyyy")" type="text" class="cls_trk_req_to cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-2 control-label">
                        Reference form no. :
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control cls_trk_ref_wf_no" />
                    </div>
                    <div class="col-md-2 control-label">
                        View as :
                    </div>
                    <div class="col-md-4">
                        <select class="cls_report_track_view form-control" style="width:100%;">
                            <option value="pg" selected>Packaging view</option>
                            <option value="mk">Marketing view</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_wf_completed">Workflow is completed</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 control-label">
                        <hr style="margin-top:0px;margin-bottom:0px;" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 control-label">
                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_reprot_tracking_advance_search">Advance search</label>
                    </div>
                </div>

                <div class="cls_reprot_tracking_advance_search">
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Sales order  :
                        </div>
                        <div class="col-md-4">
                            <textarea style="" rows="3" class="form-control cls_search_so" placeholder="Ex. 500002212
     500002213"></textarea>
                        </div>
                        <div class="col-md-2 control-label">
                            Order BOM components    :
                        </div>
                        <div class="col-md-4">
                            <textarea style="" rows="3" class="form-control cls_search_order_bom" placeholder="Ex. 5K10U303N000000102
     5K10U303N000000101"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            SO create date from   :
                        </div>
                        <div class="col-md-4">
                            <div class="col-md-5" style="padding-left:0px;">
                                <input type="text" class="cls_trk_rdd_from cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                            </div>
                            <div class="col-md-2 control-label">
                                to :
                            </div>
                            <div class="col-md-5" style="padding-left:0px;padding-right:0px;">
                                <input type="text" class="cls_trk_rdd_from cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                            </div>
                        </div>

                        <div class="col-md-2 control-label">
                            Sold to   :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_sold_to" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Company  :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_company" } })
                        </div>
                        <div class="col-md-2 control-label">
                            Ship to  :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_ship_to" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Brand  :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_brand" } })
                        </div>
                        <div class="col-md-2 control-label">
                            Zone  :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_zone" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Country  :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_country" } })
                        </div>
                        <div class="col-md-2 control-label">
                            Packaging type  :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_packaging_type" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Primary size  :
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control cls_lov_primary_size" placeholder="Ex. 401x203(2P)" />
                        </div>
                        <div class="col-md-2 control-label">
                            Project name  :
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control cls_input_project_name" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Product code  :
                        </div>
                        <div class="col-md-4">
                            <textarea style="" rows="3" class="cls_input_product_code form-control" placeholder="Ex. 3AA7LN2NYAENTMUURU"></textarea>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            RD reference no.  :
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control cls_input_rd_number" />
                        </div>
                        <div class="col-md-2 control-label">
                            Net weight  :
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control cls_input_net_weight" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Current step (status)  :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_cur_step" } })
                        </div>
                        <div class="col-md-2 control-label">
                            Creator  :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_creator" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Supervised by  :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_supervised" } })
                        </div>
                        <div class="col-md-2 control-label">
                            Current assign  :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_cur_assign" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 control-label">
                            Working group  :
                        </div>
                        <div class="col-md-4">
                            @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_cur_working_group" } })
                        </div>
                        <div class="col-md-2">

                        </div>
                        <div class="col-md-2">
                            <label class="checkbox-inline"><input type="checkbox" class="cls_chk_wf_action_by_me">Action by me</label>
                        </div>
                        <div class="col-md-2">
                            <label class="checkbox-inline"><input type="checkbox" class="cls_chk_wf_overdue">Workflow is overdue</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <button type="submit" class="cls_trk_btn_search btn btn-primary">Search</button>
                        <button type="button" class="cls_trk_btn_clr btn btn-danger">Clear</button>
                        <button type="button" class="btn btn-info cls_btn_export_excel">Export excel</button>
                        @*<button type="button" class="cls_trk_btn_back btn btn-warning">Back</button>*@
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr style="margin-top:10px;margin-bottom:10px;" />
    <div class="row">
        <div class="col-md-12">
            <!--Packaging View-->
            <div class="cls_table_report_pg">
                <table id="table_report_pg" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th class="cls_nowrap">No. </th>
                            <th class="cls_nowrap">Creator</th>
                            <th class="cls_nowrap">Workflow number</th>
                            <th class="cls_nowrap">Packaging type</th>
                            <th class="cls_nowrap">WF status</th>
                            <th class="cls_nowrap" style="width:800px;min-width:800px;">
                                <div class="row">
                                    <div style="width:360px;min-width:360px;" class="col-md-4">
                                        Current step
                                    </div>
                                    <div style="width:290px;min-width:290px;" class="col-md-4">
                                        Current assign
                                    </div>
                                    <div style="width:170px;min-width:170px;text-align: right;" class="col-md-4">
                                        Due date
                                    </div>
                                </div>
                            </th>
                            <th class="cls_nowrap">Sold to</th>
                            <th class="cls_nowrap">Ship to</th>
                            <th class="cls_nowrap">In transit to</th>
                            <th class="cls_nowrap">SO no.</th>
                            <th class="cls_nowrap">SO create date</th>
                            @*<th class="cls_nowrap">SO item</th>*@
                            <th class="cls_nowrap">Brand</th>
                            <th class="cls_nowrap">Additional brand</th>
                            <th class="cls_nowrap">Product code</th>
                            <th class="cls_nowrap">Prod./insp. memo</th>
                            <th class="cls_nowrap">RD Reference no.</th>
                            <th class="cls_nowrap">RDD</th>

                            <th class="cls_nowrap">Vendor RFQ</th>
                            <th class="cls_nowrap">Selected vendor</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!--Marketing View-->
            <div class="cls_table_report_mk cls_hide">
                <table id="table_report_mk" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th class="cls_nowrap">No. </th>
                            <th class="cls_nowrap">Creator</th>
                            <th class="cls_nowrap">Workflow number</th>
                            <th class="cls_nowrap">Packaging type</th>
                            <th class="cls_nowrap">Primary type</th>
                            <th class="cls_nowrap">WF status</th>
                            <th class="cls_nowrap" style="width:800px;min-width:800px;">
                                <div class="row">
                                    <div style="width:360px;min-width:360px;" class="col-md-4">
                                        Current step
                                    </div>
                                    <div style="width:290px;min-width:290px;" class="col-md-4">
                                        Current assign
                                    </div>
                                    <div style="width:170px;min-width:170px;text-align: right;" class="col-md-4">
                                        Due date
                                    </div>
                                </div>
                            </th>
                            <th class="cls_nowrap">Sold to</th>
                            <th class="cls_nowrap">Ship to</th>
                            <th class="cls_nowrap">Route description</th>
                            <th class="cls_nowrap">In transit to</th>
                            <th class="cls_nowrap">SO no.</th>
                            <th class="cls_nowrap">SO create date</th>
                            @*<th class="cls_nowrap">SO item</th>*@
                            <th class="cls_nowrap">Brand</th>
                            <th class="cls_nowrap">Additional brand</th>
                            <th class="cls_nowrap">Product code</th>
                            <th class="cls_nowrap">Prod./insp. memo</th>
                            <th class="cls_nowrap">RD Reference no.</th>
                            <th class="cls_nowrap">RDD</th>

                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/reporttracking")
}
