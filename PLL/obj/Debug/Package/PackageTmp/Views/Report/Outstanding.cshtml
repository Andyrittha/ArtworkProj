@{
    ViewBag.Title = "Outstanding report";
}
<div class="cls_report_outstanding">
    <div class="panel-default">
        <div class="panel-heading cls_div_search_criteria">
            <h3 class="panel-title">Outstanding report</h3>
        </div>
        <div class="panel-body cls_div_body_search_criteria" style="padding:0px;padding-top:10px;">
            <form>
                <div class="row">
                    <div class="col-md-2 control-label">
                        Sales order number no. :
                    </div>
                    <div class="col-md-4">
                        <textarea rows="4" class="form-control cls_search_so_no"></textarea>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-4 control-label">
                                Company :
                            </div>
                            <div class="col-md-8">
                                @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_company" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 control-label">
                                Sold to :
                            </div>
                            <div class="col-md-8">
                                @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_sold_to" } })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 control-label">
                                Ship to :
                            </div>
                            <div class="col-md-8">
                                @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_ship_to" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 control-label">
                        Sales order item   :
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-5" style="padding-left:0px;">
                            <input type="text" class="cls_search_so_item_from form-control" />
                        </div>
                        <div class="col-md-2 control-label">
                            to :
                        </div>
                        <div class="col-md-5" style="padding-left:0px;padding-right:0px;">
                            <input type="text" class="cls_search_so_item_to form-control" />
                        </div>
                    </div>
                    <div class="col-md-2 control-label">
                        Brand   :
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_brand" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 control-label">
                        SO created date :
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-5" style="padding-left:0px;">
                            <input type="text" class="cls_search_so_created_from cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                        <div class="col-md-2 control-label">
                            to :
                        </div>
                        <div class="col-md-5" style="padding-left:0px;padding-right:0px;">
                            <input type="text" class="cls_search_so_created_to cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                    </div>

                    <div class="col-md-2 control-label">
                        Country   :
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_country" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 control-label">
                        Requested delivery date :
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-5" style="padding-left:0px;">
                            <input type="text" class="cls_search_rdd_from cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                        <div class="col-md-2 control-label">
                            to :
                        </div>
                        <div class="col-md-5" style="padding-left:0px;padding-right:0px;">
                            <input type="text" class="cls_search_rdd_to cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                        </div>
                    </div>

                    <div class="col-md-2 control-label">

                    </div>
                    <div class="col-md-4">
                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_wf_created">WF created</label>
                    </div>
                </div>

                <div class="row">

                    <div class="col-md-2 control-label">
                        Product code :
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_product_code" } })
                    </div>
                    <div class="col-md-2 control-label">

                    </div>
                    <div class="col-md-4">
                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_flag_send_to_pp">Flag for send to PP</label>
                    </div>
                </div>

                <div class="row">

                    <div class="col-md-2 control-label">
                        Order bom component :
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_order_bom_component" } })
                    </div>
                    <div class="col-md-2 control-label">

                    </div>
                    <div class="col-md-4">
                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_send_to_pp">Sent to PP</label>
                    </div>
                </div>

                <div class="row">

                    <div class="col-md-2 control-label">
                        Person in charge :
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_pic" } })
                    </div>
                    <div class="col-md-2 control-label">

                    </div>
                    <div class="col-md-4">
                        <label class="checkbox-inline"><input type="checkbox" class="cls_chk_po_created">PO created</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <button type="submit" class="cls_btn_search btn btn-primary">Search</button>
                        <button type="button" class="cls_btn_clr btn btn-danger">Clear</button>
                        <button type="button" class="btn btn-info cls_btn_export_excel">Export excel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr style="margin-top:10px;margin-bottom:10px;" />
    <div class="row">
        <div class="col-md-12 cls_table_report_outstanding">
            <table id="table_report_outstanding" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th class="cls_nowrap">No. </th>
                        <th class="cls_nowrap">SO no.</th>
                        <th class="cls_nowrap">Item</th>
                        <th class="cls_nowrap">Material</th>
                        <th class="cls_nowrap">Description</th>
                        <th class="cls_nowrap">SO Qty</th>
                        <th class="cls_nowrap">SU</th>
                        <th class="cls_nowrap">RJ</th>
                        <th class="cls_nowrap">Plant</th>
                        <th class="cls_nowrap">BOM item</th>
                        <th class="cls_nowrap">Component</th>
                        <th class="cls_nowrap">Component description</th>
                        <th class="cls_nowrap">New BOM item</th>
                        <th class="cls_nowrap">Quantity</th>
                        <th class="cls_nowrap">Current WF status</th>
                        <th class="cls_nowrap">WF no.</th>
                        <th class="cls_nowrap">Flag for send to PP</th>
                        <th class="cls_nowrap">Sent to PP</th>
                        <th class="cls_nowrap">PO created</th>
                        <th class="cls_nowrap">Stock</th>
                        <th class="cls_nowrap">Created on</th>
                        <th class="cls_nowrap">RDD</th>
                        <th class="cls_nowrap">Sold to name</th>
                        <th class="cls_nowrap">Ship to name</th>
                        <th class="cls_nowrap">PIC</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var PICId = '@ViewBag.PICId';
        var PICName = '@ViewBag.PICName';
    </script>
    @Scripts.Render("~/bundles/reportoutstanding")
    <script type="text/javascript">
        $(document).ready(function () {
            //if (!isEmpty(PICId))
            //    setValueToDDL('.cls_report_outstanding .cls_lov_search_pic', PICId, PICName);
        });
    </script>
}
