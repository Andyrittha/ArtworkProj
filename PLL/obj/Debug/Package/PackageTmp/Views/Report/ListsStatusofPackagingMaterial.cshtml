@{
    ViewBag.Title = "Lists packaging material report";
}
<div class="cls_report_artworkmatcontrol">
    <div class="panel-default">
        <div class="panel-heading cls_div_search_criteria">
            <h3 class="panel-title">Lists packaging material report</h3>
        </div>
        <div class="panel-body cls_div_body_search_criteria" style="padding:0px;padding-top:10px;">
            <form>
                <div class="row">
                    <div class="col-md-2 control-label">
                        Sold to :
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_sold_to" } })
                    </div>
                    <div class="col-md-2 control-label">
                        Ship to :
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_ship_to" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">Mat5 :  </div>
                    <div class="col-md-4">
                        @*maxlength="1000"*@
                        <textarea rows="2" class="cls_txtarea_mat5 form-control" placeholder="Ex. 5K10U303N000000102
5K10U303N000000101"></textarea>
                    </div>
                    <div class="col-md-2">Product code :  </div>
                    <div class="col-md-4">
                        @*maxlength="1000"*@
                        <textarea rows="2" class="cls_txtarea_search_product_code form-control" placeholder="Ex. 3AA7LN2NYAENTMUURU"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">Country : <br> @Html.ActionLink("Country master", "", "Zone", null, new { @style = "font-weight: bold;font-size: 12px;", target = "_blank" })</div>
                    <div class="col-md-4">
                        <textarea rows="2" class="cls_txtarea_country form-control" placeholder="Ex. US
TH"></textarea>
                    </div>
                    <div class="col-md-2">Packaging type :  </div>
                    <div class="col-md-4">
                        <textarea rows="2" class="cls_txtarea_pkg form-control" placeholder="Ex. 5F
5M"></textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">Remark unlock :</div>
                    <div class="col-md-4">
                        <textarea rows="2" class="cls_txtarea_remark_unlock form-control" ></textarea>
                    </div>
                    <div class="col-md-2">Remark lock :  </div>
                    <div class="col-md-4">
                        <textarea rows="2" class="cls_txtarea_remark_lock form-control" ></textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2 control-label">
                        Zone :
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_zone" } })
                    </div>
                    <div class="col-md-2 control-label">
                        Brand :
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_brand" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 control-label">
                        Status :
                    </div>
                    <div class="col-md-4">
                        <select class="form-control cls_lov_search_status" style="width:100%;">
                            <option value="" selected></option>
                            <option value="ALL">All</option>
                            <option value="O">Obsolete</option>
                            <option value="I">In use</option>
                        </select>
                    </div>
                    <div class="col-md-2 control-label">
                        PIC :
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("LOV/ListOfValue", new ViewDataDictionary { { "cls_ddl", "cls_lov_search_pic" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 control-label">
                        <input type="checkbox" class="cls_chk_artwork_file" value="X"> Check Artwork File
                    </div>
                    <div class="col-md-4">
                        <input type="checkbox" class="cls_chk_freeze_column" value="X"> Freeze Column
                    </div>
                   
                </div>
                <div class="row" style="margin-top:10px;">
                    <div class="col-md-4">
                        <button type="submit" class="cls_btn_search btn btn-primary">Search</button>
                        <button type="button" class="cls_btn_back btn btn-warning" onClick='window.history.back()'>Back</button>
                        <button type="button" class="cls_btn_clear btn btn-danger">Clear</button>
                        <button type="button" class="btn btn-info cls_btn_export_excel">Export excel</button>
                        <button type="button" class="btn btn-success cls_btn_download_file">Download files</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr style="margin-top:10px;margin-bottom:10px;" />
    <div class="row">
        <div class="col-md-12">
            <button type="button" class="cls_unlock_btn btn btn-primary">Unlock</button>
            <button type="button" class="btn btn-warning cls_btn_cancel_unlock">Cancel unlock</button>
            <button type="button" class="btn cls_btn_inuse" style="background-color:darkorange;border-color:coral;color:white">In use</button>
            <button type="button" class="btn btn-danger cls_btn_obsolete">Obsolete</button>
           
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 cls_table_report_artworkmatcontrol">
            <table id="table_report_artworkmatcontrol" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="mat_select_all">
                        </th>
                       @* <th class="cls_td_width_25"></th>*@
                        <th class="cls_td_width_140">Packaging material</th>
                        <th class="cls_td_width_300">Packaging description</th>
                        <th class="cls_td_width_50">Artwork</th>
                        <th class="cls_td_width_60">Status</th>
                        <th class="cls_td_width_130">Request form no.</th>
                        <th class="cls_td_width_130">Artwork WF</th>
                        <th class="cls_td_width_160">Mockup WF</th>
                        <th class="cls_td_width_130">Unlock date from</th>
                        <th class="cls_td_width_130">Unlock date to</th>
                        <th class="cls_td_width_240">Remark unlock</th>
                        <th class="cls_td_width_240">Remark lock</th>
                        <th class="cls_td_width_130">Last updated</th>

                        <th class="cls_td_width_130">Product code</th>
                        <th class="cls_td_width_300">Sold to</th>
                        <th class="cls_td_width_300">Ship to</th>
                        <th class="cls_td_width_140">Brand</th>
                        <th class="cls_td_width_150">Country</th>
                        <th class="cls_td_width_60">Zone</th>


                        <th class="cls_td_width_130">Primary size</th>
                        <th class="cls_td_width_60">Pack size</th>
                        <th class="cls_td_width_100">Packing style</th>

                        <th class="cls_td_width_100">Packaging type</th>
                        <th class="cls_td_width_100">Primary type</th>
                        <th class="cls_td_width_160">PA owner</th>
                        <th class="cls_td_width_160">PG owner</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal" id="modal_report_artworkmatcontrol_unlock" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

    <div class="vertical-alignment-helper">
        <div class="modal-dialog modal_in_modal vertical-align-center" style="width:60%;">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Unlock material</h4>
                    </div>
                    <div class="modal-body">

                        <div class="row">
                            <div class="col-md-3 control-label">
                                Unlock date from<span style="color: red;">*</span>:
                            </div>
                            <div class="col-md-9">
                                <div class="col-md-3" style="padding-left:0px;">
                                    @{DateTime firstDay = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);}
                                    <input value="@firstDay.ToString("dd/MM/yyyy")" type="text" class="cls_dt_search_unlock_date_from cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                                </div>
                                <div class="col-md-2 control-label">
                                    to<span style="color: red;">*</span> :
                                </div>
                                <div class="col-md-3" style="padding-left:0px;">
                                    <input value="@firstDay.AddMonths(1).AddDays(-1).ToString("dd/MM/yyyy")" type="text" class="cls_dt_search_unlock_date_to cls_my_datepicker form-control" placeholder="dd/mm/yyyy" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 control-label">
                                Remark<span style="color: red;">*</span>:
                            </div>
                            <div class="col-md-9">
                                <div class="cls_unlock_remark" style="min-height: 80px;"></div>
                            </div>

                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="cls_btn_submit btn btn-primary">Submit</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<div class="modal" id="modal_report_artworkmatcontrol_obsolete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

    <div class="vertical-alignment-helper">
        <div class="modal-dialog modal_in_modal vertical-align-center" style="width:60%;">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Obsolete material</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-2 control-label">
                                Remark<span style="color: red;">*</span>:
                            </div>
                            <div class="col-md-10">
                                <div class="cls_obsolete_remark" style="min-height: 80px;"></div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="cls_btn_submit btn btn-primary">Submit</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@section scripts
{
    @Scripts.Render("~/bundles/reportartworkmatcontrolv2")
}
